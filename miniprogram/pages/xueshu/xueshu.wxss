#addType{
  width: 320px;
  margin: 0 auto;
  margin-top: 40px;
  color: #4c5260;
  font-size: 14px;
  margin-bottom: 0;
}
.addpicker{
  border: 1px solid #ccc;
  width: 320px;
  height: 40px;
  /* width: 75%; */
  border-radius: 5px;
  box-shadow: 1px 1px 1px 1px #eee;
  margin-top: 10px;
  box-sizing:border-box;
  /* text-indent: 1em; */
  padding-left: 1.8em;
  position: relative;
}
.addpicker .picker{
  line-height: 40px;
}
.addpicker .gengduo{
  position: absolute;
  top: 50%;
  transform: translate(0,-50%);
  line-height: 40px;
  right: 10px;
  width: 20px;
  height: 20px;
}
.addTitle{
  width: 320px;
