/* 开始 */
page {
  height: 100%;
  display: table;
  background: #3e62ad
}

.auth {
  margin-top: 0;
  text-align: center;
  display: table-cell;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: center;
  align-items: flex-start;
  padding: 100rpx;
  vertical-align: middle;
  position: relative;
}


.title {
  display: inline-block;
  width: 100%;
  font-size: 18px;
  margin: 0 0 60rpx;
  color: white;
}

.describe {
  color: white;
  font-size: 12px;
  margin-top: 10px;
  border-radius: 50%;
  text-align: center;
  display: inline-block;
  width: 100%;
}

.btn {
  padding: 0 60rpx;
  background-color: #3e62ad;
  margin: 20rpx 0 200rpx;
  top:50px;
  text-align: center;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  background-image: none;
  white-space: nowrap;
  user-select: none;
  font-size: 14px;
  border: 0 !important;
  position: relative;
  text-decoration: none;
  height: 44px;
  line-height: 44px;
  box-shadow: inset 0 0 0 1px #3e62ad;  
  background: #fff !important;
  color: #3e62ad !important;
  display: inline-block;
  border-radius: 10rpx;
}
.right{
  width: 180px;
  height: 180px;
  position: absolute;
  background: #3e62ad;
  top: 0;
  left: 100%;
  border-radius: 90px;
  transform: translate(-40%,0);
}
.right2{
  width: 220px;
  height: 220px;
  position: absolute;
  background: #4c6cb3;
  border-radius: 110px;
  top: 0%;
  left: 100%;
  transform: translate(-70%,10%);
  z-index: -100
}
.top{
  width: 200px;
  height: 200px;
  position: absolute;
  top: 0%;
  left: 80%;
  background: #5a79b3;
  border-radius: 100px;
  transform: translate(-50%,-40%);
  z-index: -50;
}